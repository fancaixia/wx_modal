/* 模态框样式 */
.div_shadow {
  position: absolute;
  top: 0;
  left: 0;
  background:rgba(0,0,0, .65);
  width: 100%;
  height: 100%;
}

.modal {
  width: 620rpx;
  height:220rpx;
  border-radius: 5rpx;
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 65rpx;
  bottom:488rpx;
  background-color: white;
  overflow: hidden;
  animation:modalFun 0.35s;

}

.title {
  position:relative;
  bottom:-46rpx;
  text-align:center;
  font-size:32rpx;
  color:#888;
}

.btnbox{
  width: 100%;
  height: 95rpx;
  position:absolute;
  right:0;
  bottom:0;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.confirm-container{
  width:100%;
  line-height:95rpx;
  border-top:1rpx solid #dcdcdc;
  text-align:center;
  font-size: 36rpx;
  color: #3CC51F;
  cursor: pointer;
}
.confirm-container:active {
  background-color: #eee;
}

@keyframes modalFun {
  0% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
